#See https://aka.ms/customizecontainer to learn how to customize your debug container and how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:7.0 AS base
WORKDIR /app
EXPOSE 5000
ENV ASPNETCORE_URLS http://+:5000

FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build
WORKDIR /src
COPY ["Stepstone.Api/Stepstone.Api.csproj", "src/Stepstone.Api/"]
COPY ["Stepstone.DataMock/Stepstone.DataMock.csproj", "src/Stepstone.DataMock/"]
COPY ["Stepstone.Domain/Stepstone.Domain.csproj", "src/Stepstone.Domain/"]
COPY ["Stepstone.Persistence/Stepstone.Persistence.csproj", "src/Stepstone.Persistence/"]
RUN dotnet restore "src/Stepstone.Api/Stepstone.Api.csproj"
COPY . .
WORKDIR "/src/Stepstone.Api"
RUN dotnet build "Stepstone.Api.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "Stepstone.Api.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Stepstone.Api.dll"]